    <title>Users-Gontobyo</title>
</head>


<%- include("layout/header") %>

    <!-- Header is finished ! -->

    <%- include("layout/success-alert") %>


        <section>
            <div class="users-container">
                <% gontobyousers.forEach(user=>{ %>

                    <div class="user-info">
                        <p>
                            Name:
                            <span>
                        <%= user.username %>
                    </span>
                        </p>
                        <p>
                            Email:
                            <span>
                        <%= user.email %>
                    </span>
                        </p>
                        <p>
                            Phone:
                            <span>
                        +<%= user.phone %>
                    </span>
                        </p>
                        <p>
                            <form action="/delete-user" method="post">

                                <input class="d-none" name="user_id" value="<%= user._id %>" />

                                <button class="delete-btn" type="submit">Delete</button>

                            </form>
                        </p>
                    </div>
                    <% }) %>
            </div>
        </section>

        <!-- Content Section is finished !  -->

